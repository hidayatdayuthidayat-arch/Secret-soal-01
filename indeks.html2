    .container {
      max-width: 700px;
      margin: auto;
      background: #ffffff;
      padding: 20px;
      border-radius: 10px;
    }
    .soal {
      margin-bottom: 24px;
      padding-bottom: 12px;
      border-bottom: 1px solid #ddd;
    }
    button {
      padding: 8px 14px;
      margin-top: 8px;
      border: none;
      border-radius: 6px;
      background: #007bff;
      color: white;
      cursor: pointer;
    }
    .jawaban {
      display: none;
      margin-top: 6px;
      color: green;
      font-weight: bold;
    }
  </style>

  <script>
    function toggleJawaban(id) {
      var el = document.getElementById(id);
      el.style.display = el.style.display === "none" ? "block" : "none";
    }
  </script>
</head>
<body>
  <div class="container">
    {{ content }}
  </div>
</body>
</html>
